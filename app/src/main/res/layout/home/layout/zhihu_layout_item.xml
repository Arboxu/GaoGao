<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/zhihu_item_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:foreground="@drawable/mid_grey_ripple"
              android:orientation="horizontal"
              android:paddingBottom="1dp"
              android:paddingTop="1dp"
              android:stateListAnimator="@animator/raise">

    <TextView
        android:id="@+id/item_text_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:stateListAnimator="@animator/raise"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        />

    <com.arbo.gaogao.widget.BadgedFourThreeImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_image_id"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_hight"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="5dp"
        android:elevation="2dp"
        android:foreground="@drawable/mid_grey_ripple"
        android:stateListAnimator="@animator/raise"
        app:badgeGravity="end|bottom"
        app:badgePadding="16dp"
        />




</LinearLayout>