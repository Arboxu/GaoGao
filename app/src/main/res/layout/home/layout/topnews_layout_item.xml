<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/news_item_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:foreground="@drawable/mid_grey_ripple"
              android:orientation="horizontal"
              android:paddingBottom="1dp"
              android:paddingTop="1dp"
              android:stateListAnimator="@animator/raise">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        >
        <TextView
            android:id="@+id/item_title_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:stateListAnimator="@animator/raise"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/item_time_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:stateListAnimator="@animator/raise"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/item_source_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:stateListAnimator="@animator/raise"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                />

        </LinearLayout>


    </LinearLayout>


    <com.arbo.gaogao.widget.BadgedFourThreeImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_image_id"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_hight"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="5dp"
        android:elevation="2dp"
        android:foreground="@drawable/mid_grey_ripple"
        android:stateListAnimator="@animator/raise"
        app:badgeGravity="end|bottom"
        app:badgePadding="16dp"
        />

</LinearLayout>